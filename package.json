{
	"name": "webpackstrap",
	"version": "0.1.1",
	"description": "React project boilerplate with webpack 4",
	"homepage": "https://github.com/vr1e/webpackstrap",
	"author": "Nikola Vrhovac <nikola.vrhovac@gowi.rs> (https://github.com/vr1e/)",
	"license": "MIT",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/vr1e/webpackstrap"
	},
	"keywords": [
		"webpack",
		"react",
		"boilerplate"
	],
	"bugs": {
		"url": "https://github.com/vr1e/webpackstrap/issues"
	},
	"scripts": {
		"build": "webpack --config webpack.prod.js --progress --profile",
		"start": "webpack-dev-server --config webpack.dev.js --open",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"devDependencies": {
		"@babel/core": "^7.5.4",
		"@babel/plugin-proposal-class-properties": "^7.5.0",
		"@babel/preset-env": "^7.5.4",
		"@babel/preset-react": "^7.0.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^2.1.1",
		"file-loader": "^3.0.1",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.7.0",
		"node-sass": "^4.12.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"sass-loader": "^7.1.0",
		"webpack": "^4.35.3",
		"webpack-bundle-analyzer": "^3.3.2",
		"webpack-cli": "^3.3.5",
		"webpack-dev-server": "^3.7.2",
		"webpackbar": "^3.2.0"
	},
	"prettier": {
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 2,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": true,
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "avoid"
	}
}
